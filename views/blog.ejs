<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/head') %>
    <title><%= blog.title %></title>
    <style>
      .prose img {
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
      }
    </style>
  </head>
  <body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-white">
    <%- include('partials/nav') %>
    <div class="container mx-auto p-4 sm:p-6 lg:p-8">
      <div
        class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden"
      >
        <% if (blog.coverImageURL) { %>
        <img
          src="<%= blog.coverImageURL %>"
          alt="<%= blog.title %>"
          class="w-full h-auto object-cover"
        />
        <% } %>
        <div class="p-6">
          <h1
            class="text-4xl md:text-5xl font-extrabold mb-4 text-gray-900 dark:text-white"
          >
            <%= blog.title %>
          </h1>
          <div class="flex items-center text-gray-600 dark:text-gray-400 mb-6">
            <img
              src="/images/default.avif"
              alt="author"
              class="w-10 h-10 rounded-full mr-4"
            />
            <div>
              <p class="font-semibold"><%= blog.createdBy.fullName %></p>
              <p class="text-sm">
                <%= new Date(blog.createdAt).toLocaleDateString() %>
              </p>
            </div>
          </div>
          <div
            class="prose dark:prose-invert max-w-none text-lg leading-relaxed"
          >
            <p><%= blog.body %></p>
          </div>
        </div>

        <div class="p-6 border-t border-gray-200 dark:border-gray-700">
          <h3 class="text-2xl font-bold mb-4">
            Comments (<%= comments.length %>)
          </h3>
          <% if (locals.user) { %>
          <form
            action="/blog/comment/<%= blog._id %>"
            method="post"
            class="mb-6"
          >
            <textarea
              name="content"
              class="w-full p-3 border rounded-lg dark:bg-gray-700 dark:border-gray-600"
              placeholder="Add a comment..."
            ></textarea>
            <button
              type="submit"
              class="mt-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700"
            >
              Submit
            </button>
          </form>
          <% } else { %>
          <p class="mb-6">
            <a href="/user/login" class="text-blue-500">Login</a> to add a
            comment.
          </p>
          <% } %>

          <div>
            <% comments.forEach(comment => { %>
            <div class="flex items-start mb-4">
              <img
                src="/images/default.avif"
                alt="author"
                class="w-10 h-10 rounded-full mr-4"
              />
              <div>
                <p class="font-semibold"><%= comment.createdBy.fullName %></p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  <%= new Date(comment.createdAt).toLocaleDateString() %>
                </p>
                <p class="mt-1"><%= comment.content %></p>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
